body
    margin 0
    padding 0

.cookie-block
    background #ebf3aa
    font-size 11px
    font-family arial,sans serif
    border 1px solid #ccc
    padding 0 5px
    width 100%
    text-align center
    display table
    height 35px
    > div
        display table-cell
        width 50%
    .message
        width 95%

    .btn
        width 4%
        line-height 30px
        font-weight normal
        font-size xx-small
        background #ccc
        color white
        height 100%
        a
            display block
            font-size 15px
            color black
            font-weight bold
            text-align center
    a
        color grey
        font-weight normal
        text-decoration: none
    a:hover
        color orange

